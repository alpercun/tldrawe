{
  "manifest_version": 2,

  "name": "tldrawe",
  "description": "Draw on any webpage with tldraw",
  "version": "0.1",

  "options_ui": {
    "page": "options.html"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content.js"]
    }
  ],

  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },

  "permissions": ["storage"],

  "browser_specific_settings": {
    "gecko": {
      "id": "{534e0a54-1bc9-4c1a-bf03-c3f4ea70cc01}"
    }
  }
}
